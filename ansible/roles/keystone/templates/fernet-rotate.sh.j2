#!/bin/bash
{% if not use_preconfigured_fernet %}
keystone-manage --config-file /etc/keystone/keystone.conf fernet_rotate --keystone-user {{ keystone_username }} --keystone-group {{ keystone_groupname }}

/usr/bin/fernet-push.sh
{% else %}
echo "Unsupported: Fernet key rotation should be performed on the host installation when 'use_preconfigured_fernet' is set."
{% endif %}
